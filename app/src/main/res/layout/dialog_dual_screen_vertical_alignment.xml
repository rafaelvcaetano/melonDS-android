<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/textVerticalAlignmentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dual_screen_vertical_alignment_internal_label"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchInternalAlignmentOverride"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/radioGroupInternalAlignment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioInternalAlignmentTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dual_screen_vertical_alignment_option_top" />

                <RadioButton
                    android:id="@+id/radioInternalAlignmentCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dual_screen_vertical_alignment_option_center"
                    android:layout_marginTop="4dp" />

                <RadioButton
                    android:id="@+id/radioInternalAlignmentBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dual_screen_vertical_alignment_option_bottom"
                    android:layout_marginTop="4dp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/dual_screen_vertical_alignment_external_label"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchExternalAlignmentOverride"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/radioGroupExternalAlignment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioExternalAlignmentTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dual_screen_vertical_alignment_option_top" />

                <RadioButton
                    android:id="@+id/radioExternalAlignmentCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dual_screen_vertical_alignment_option_center"
                    android:layout_marginTop="4dp" />

                <RadioButton
                    android:id="@+id/radioExternalAlignmentBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dual_screen_vertical_alignment_option_bottom"
                    android:layout_marginTop="4dp" />
            </RadioGroup>
        </LinearLayout>

        <TextView
            android:id="@+id/textVerticalAlignmentDefaults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary" />
    </LinearLayout>
</ScrollView>
