<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <RadioGroup
            android:id="@+id/radioGroupPresets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioPresetOff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dual_screen_preset_off" />

            <RadioButton
                android:id="@+id/radioPresetInternalTopExternalBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dual_screen_preset_internal_top_external_bottom" />

            <RadioButton
                android:id="@+id/radioPresetInternalBottomExternalTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dual_screen_preset_internal_bottom_external_top" />
        </RadioGroup>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchKeepAspectRatio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/keep_ds_ratio" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchIntegerScale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/dual_screen_integer_scale" />

        <Button
            android:id="@+id/buttonFillAreaOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/dual_screen_fill_area_button" />

        <TextView
            android:id="@+id/textFillAreaSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary"
            android:alpha="0.8"
            android:text="" />
    </LinearLayout>
</ScrollView>
