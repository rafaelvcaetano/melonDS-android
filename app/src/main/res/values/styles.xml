<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">@bool/lightNavigationBar</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation</item>
        <item name="actionOverflowMenuStyle">@style/Menu.OverflowUnder</item>
        <item name="preferenceTheme">@style/Preference</item>
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splashBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>

        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="EmulatorTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.DayNight</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
    </style>

    <style name="Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/colorOnPrimary</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="FullscreenDialog">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out</item>
    </style>

    <style name="FullscreenDialog.Restore">
        <item name="android:windowEnterAnimation">@null</item>
    </style>

    <style name="Preference" parent="@style/PreferenceThemeOverlay">
        <item name="android:tint">@color/buttonContrasted</item>
    </style>

    <style name="Button.Ripple" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/drawable_ripple</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Button.Ripple.Small" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/drawable_ripple_small</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Button.Editor" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/textLayoutEditor</item>
    </style>

    <style name="Menu.OverflowUnder" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor">false</item>
    </style>

    <style name="Text.SaveStateSlot" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="ColourTile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>
